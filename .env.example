# Pygmalion NNECCO Platform - Environment Configuration
# Copy this file to .env and fill in the values

# ─── Database ───────────────────────────────────
MYSQL_ROOT_PASSWORD=pygmalion
MYSQL_DATABASE=pygmalion
MYSQL_USER=pyg
MYSQL_PASSWORD=pygmalion
DATABASE_URL=mysql://pyg:pygmalion@localhost:3306/pygmalion

# ─── Aphrodite Inference Engine ─────────────────
APHRODITE_API_URL=http://localhost:2242/v1
APHRODITE_API_KEY=pyg-dev-key
APHRODITE_MODEL=PygmalionAI/pygmalion-2-7b
APHRODITE_MAX_MODEL_LEN=4096
APHRODITE_GPU_MEM=0.85
CUDA_VISIBLE_DEVICES=0

# ─── HuggingFace (for model downloads) ─────────
HF_TOKEN=

# ─── Application ────────────────────────────────
NODE_ENV=development
PORT=5000
JWT_SECRET=pyg-dev-jwt-secret-change-in-production
